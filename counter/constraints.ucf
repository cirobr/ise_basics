# Clock â€“ proper TIMESPEC (no warnings)
NET "CLK_12MHZ" LOC = D9 | IOSTANDARD = LVCMOS33;
NET "CLK_12MHZ" TNM_NET = "CLK_12MHZ";
TIMESPEC TS_CLK_12MHZ = PERIOD "CLK_12MHZ" 83.333 ns HIGH 50%;

# Button (freeze)
NET "BTNU" LOC = M18 | IOSTANDARD = LVCMOS33 | PULLUP;

# 7-segment segments (individual bits)
NET "CA" LOC = A3 | IOSTANDARD = LVCMOS33 | DRIVE = 8 | SLEW = FAST;
NET "CB" LOC = B4 | IOSTANDARD = LVCMOS33 | DRIVE = 8 | SLEW = FAST;
NET "CC" LOC = A4 | IOSTANDARD = LVCMOS33 | DRIVE = 8 | SLEW = FAST;
NET "CD" LOC = C4 | IOSTANDARD = LVCMOS33 | DRIVE = 8 | SLEW = FAST;
NET "CE" LOC = C5 | IOSTANDARD = LVCMOS33 | DRIVE = 8 | SLEW = FAST;
NET "CF" LOC = D6 | IOSTANDARD = LVCMOS33 | DRIVE = 8 | SLEW = FAST;
NET "CG" LOC = C6 | IOSTANDARD = LVCMOS33 | DRIVE = 8 | SLEW = FAST;
NET "DP" LOC = A5 | IOSTANDARD = LVCMOS33 | DRIVE = 8 | SLEW = FAST;

# Anodes (active-low)
NET "AN3" LOC = B2 | IOSTANDARD = LVCMOS33 | DRIVE = 8 | SLEW = FAST;
NET "AN2" LOC = B3 | IOSTANDARD = LVCMOS33 | DRIVE = 8 | SLEW = FAST;
NET "AN1" LOC = A2 | IOSTANDARD = LVCMOS33 | DRIVE = 8 | SLEW = FAST;
NET "AN0" LOC = B2 | IOSTANDARD = LVCMOS33 | DRIVE = 8 | SLEW = FAST;
